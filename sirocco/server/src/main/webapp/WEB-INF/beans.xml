<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<jaxrs:server id="userApiServer" address="/">
		<jaxrs:serviceBeans>
			<ref bean="userApiBean" />
		</jaxrs:serviceBeans>

		<jaxrs:providers>
			<ref bean="jaxbProvider"/>
			<ref bean="authenticationHandler" />
		</jaxrs:providers>
    
	</jaxrs:server>

	<bean id="userApiBean" class="org.ow2.sirocco.cloudmanager.api.impl.UserAPIImpl"/>
	<bean id="jaxbProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider"/>
	<bean id="authenticationHandler" class="org.ow2.sirocco.cloudmanager.api.impl.AuthenticationHandler"/>
	
</beans>
