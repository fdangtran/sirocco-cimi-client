cygwin=false;
case "`uname`" in
  CYGWIN*) cygwin=true;
esac

if [ -z "$CIMICLIENT_TOOLS_HOME" ];  then
  echo "Please set CIMICLIENT_TOOLS_HOME"
  exit 1
fi


CLASSPATH="$CIMICLIENT_TOOLS_HOME/lib/*"

if $cygwin; then
  CLASSPATH=`cygpath --path -w "$CLASSPATH"`
  CLASSPATH=";$CLASSPATH"
fi

java -cp "$CLASSPATH" $CIMICLIENT_OPTS org.ow2.sirocco.apis.rest.cimi.tools.Client "$@"                   